<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="67dp"
    android:orientation="horizontal">


    <!--    Rekomendasi-->
    <LinearLayout
        android:layout_width="70dp"
        android:layout_height="60dp"
        android:orientation="vertical"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="15dp">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:src="@drawable/sp_rekomendasi_icon"/>
    </LinearLayout>

    <!--    Feed-->
    <LinearLayout
        android:layout_width="70dp"
        android:layout_height="60dp"
        android:orientation="vertical"
        android:layout_marginRight="15dp">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:src="@drawable/sp_feed_icon"/>
    </LinearLayout>

    <!--    ShopeeVideo-->

    <LinearLayout
        android:layout_width="70dp"
        android:layout_height="60dp"
        android:orientation="vertical"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="15dp">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:src="@drawable/sp_shopeevideo_icon"/>
    </LinearLayout>

    <!--    Notifikasi-->

    <LinearLayout
        android:layout_width="70dp"
        android:layout_height="60dp"
        android:orientation="vertical"
        android:layout_marginRight="15dp">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:src="@drawable/sp_notifikasi_icon"/>
    </LinearLayout>

    <!--    Saya-->

    <LinearLayout
        android:layout_width="70dp"
        android:layout_height="60dp"
        android:orientation="vertical"
        android:layout_marginRight="15dp">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:src="@drawable/sp_saya_icon"/>
    </LinearLayout>

</LinearLayout>